<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:paddingHorizontal="16dp"
    android:paddingVertical="4dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="150dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/corner_radius"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/productImageView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:background="@color/purple_100"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerRound"
                tools:src="@tools:sample/backgrounds/scenic[2]" />

            <androidx.core.widget.ContentLoadingProgressBar
                android:id="@+id/productImageViewLoadingProgressBar"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:indeterminateOnly="true"
                app:layout_constraintBottom_toBottomOf="@id/productImageView"
                app:layout_constraintEnd_toEndOf="@id/productImageView"
                app:layout_constraintStart_toStartOf="@id/productImageView"
                app:layout_constraintTop_toTopOf="@id/productImageView" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCall"
                style="@style/Widget.Material3.Button.Icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="6dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:icon="@drawable/baseline_phone_24"
                app:iconGravity="textEnd"
                app:iconSize="12dp"
                app:layout_constraintEnd_toEndOf="@id/productImageView"
                app:layout_constraintTop_toTopOf="@id/productImageView" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/nameTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/productImageView"
                app:layout_constraintTop_toTopOf="@id/productImageView"
                tools:text="Nome do cliente" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/phoneTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@id/nameTextView"
                app:layout_constraintStart_toStartOf="@id/nameTextView"
                app:layout_constraintTop_toBottomOf="@id/nameTextView"
                tools:text="(19) 9999 - 9999" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/dateTimeTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:layout_marginTop="8dp"
                android:maxLines="1"
                android:textColor="@color/blue"
                android:textSize="16sp"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="@id/phoneTextView"
                app:layout_constraintStart_toStartOf="@id/phoneTextView"
                app:layout_constraintTop_toBottomOf="@id/phoneTextView"
                tools:text="02/05/2023 11:53:41" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:max="50"
                android:progress="42"
                android:text="Status"
                app:indicatorColor="@color/blue"
                app:indicatorSize="28dp"
                app:layout_constraintBottom_toBottomOf="@id/locationTextView"
                app:layout_constraintEnd_toStartOf="@+id/btnDetails"
                app:layout_constraintStart_toEndOf="@id/locationTextView"
                app:layout_constraintTop_toTopOf="@id/locationTextView"
                app:layout_goneMarginEnd="8dp"
                app:trackColor="@color/purple_100" />



            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/locationTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/blue"
                android:textSize="16sp"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="@id/btnDetails"
                app:layout_constraintStart_toStartOf="@id/phoneTextView"
                app:layout_constraintTop_toTopOf="@id/btnDetails"
                tools:text="11.2km" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDetails"
                style="@style/Widget.Material3.Button.Icon"
                android:layout_width="68dp"
                android:layout_height="34dp"
                android:layout_margin="8dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:cornerRadius="@dimen/corner_radius"
                app:icon="@drawable/baseline_menu_24"
                app:iconGravity="textEnd"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />



        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>



    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardViewShimmer"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/corner_radius"
            app:layout_constraintBottom_toTopOf="@id/dateEmergencyTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/productImageViewShimmer"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:alpha="0.25"
                    android:background="@drawable/baseline_person_24"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/favoriteImageViewShimmer"
                    style="@style/Widget.Material3.Button.Icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_margin="6dp"
                    android:alpha="0.35"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    app:backgroundTint="@color/black"
                    app:iconGravity="textEnd"
                    app:iconSize="12dp"
                    app:layout_constraintEnd_toEndOf="@id/productImageViewShimmer"
                    app:layout_constraintTop_toTopOf="@id/productImageViewShimmer" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/phoneTitleTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:alpha="0.5"
                    android:background="@drawable/background_rounded_12"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/blue"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/productImageViewShimmer"
                    app:layout_constraintTop_toTopOf="@id/productImageViewShimmer" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/dateEmergencyTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:alpha="0.25"
                    android:background="@drawable/background_rounded_12"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/blue"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toEndOf="@id/phoneTitleTextView"
                    app:layout_constraintStart_toStartOf="@id/phoneTitleTextView"
                    app:layout_constraintTop_toBottomOf="@id/phoneTitleTextView" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/locationEmergencyTextView"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:alpha="0.25"
                    android:text="Status"
                    android:background="@drawable/background_rounded_12"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/blue"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toBottomOf="@id/buttonViewDetails"
                    app:layout_constraintStart_toStartOf="@id/phoneTitleTextView"
                    app:layout_constraintTop_toTopOf="@id/buttonViewDetails" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonViewDetails"
                    style="@style/Widget.Material3.Button.Icon"
                    android:layout_width="68dp"
                    android:layout_height="34dp"
                    android:layout_margin="8dp"
                    android:alpha="0.35"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    app:backgroundTint="@color/black"
                    app:cornerRadius="@dimen/corner_radius"
                    app:iconGravity="textEnd"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

    </com.facebook.shimmer.ShimmerFrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>